---
interface Props {
    id: string
    name: string
    default?: true
}
const {id, name, default: isDefault} = Astro.props
---

<label class="flex items-center hover:bg-neutral-200 px-2 rounded gap-1 select-none">
    <input class="pkg-checkbox" type="checkbox" data-id={id} data-default={Boolean(isDefault)} />
    <img src={`icons/${id}.svg`} width={24} height={24} alt={name} onerror="this.src = 'icons/unknown.svg'" />
    {name}
</label>
